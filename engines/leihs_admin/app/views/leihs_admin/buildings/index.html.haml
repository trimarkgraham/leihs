- content_for :title, _("List of Buildings")
- content_for :manage_section, "active"

.row
  .col-sm-6
    %h1= yield :title

  .col-sm-6.text-right
    %a.btn.btn-default{href: admin.new_building_path}
      %i.fa.fa-plus
      = _("Create %s") % _("Building")

%form.row.well
  .col-sm-4
    %input.form-control{type: 'text', name: 'search_term', value: params[:search_term], placeholder: _("Search..."), autocomplete: :false, autofocus: true, onfocus: "this.value = this.value;"}
  .col-sm-8
    %button.btn.btn-default{type: :submit}
      %i.fa.fa-search
      = _('Search')

.list-of-lines
  = render @buildings
